{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-notification": ["../notification/src"],
            "@alfalab/core-components-notification/*": ["../notification/src/*"],
            "@alfalab/core-components-portal": ["../portal/src"],
            "@alfalab/core-components-portal/*": ["../portal/src/*"],
            "@alfalab/core-components-stack": ["../stack/src"],
            "@alfalab/core-components-stack/*": ["../stack/src/*"],
            "@alfalab/core-components-stack-context": ["../stack-context/src"],
            "@alfalab/core-components-stack-context/*": ["../stack-context/src/*"]
        }
    },
    "references": [
        { "path": "../notification" },
        { "path": "../portal" },
        { "path": "../stack" },
        { "path": "../stack-context" }
    ]
}
