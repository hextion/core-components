{
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDirs": ["src"],
        "baseUrl": ".",
        "paths": {
            "@balafla/core-components-modal/*": ["../modal/src/*"],
            "@balafla/core-components-input/*": ["../input/src/*"],
            "@balafla/core-components-form-control/*": ["../form-control/src/*"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-calendar/*": ["../calendar/src/*"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-*": ["../*/src"]
        }
    },
    "references": [
        { "path": "../input" },
        { "path": "../icon-button" },
        { "path": "../calendar" },
        { "path": "../popover" },
        { "path": "../modal" },
        { "path": "../shared" },
        { "path": "../mq" }
    ]
}
