{
    "include": ["src", "../../typings", "../types"],
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDirs": ["src"],
        "baseUrl": ".",
        "paths": {
            "@balafla/core-components-*": ["../*/src"],
            "@balafla/core-components-form-control/*": ["../form-control/src/*"],
            "@balafla/core-components-input/*": ["../input/src/*"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-select/*": ["../select/src/*"],
            "@balafla/core-components-input-autocomplete/*": ["../input-autocomplete/src/*"],
            "@balafla/core-components-modal/*": ["../modal/src/*"]
        }
    },
    "references": [
        { "path": "../input" },
        { "path": "../select" },
        { "path": "../shared" },
        { "path": "../input-autocomplete" },
        { "path": "../mq" }
    ]
}
