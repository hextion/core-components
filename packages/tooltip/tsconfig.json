{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-bottom-sheet": ["../bottom-sheet/src"],
            "@alfalab/core-components-bottom-sheet/*": ["../bottom-sheet/src/*"],
            "@alfalab/core-components-button": ["../button/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-mq": ["../mq/src"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"],
            "@alfalab/core-components-popover": ["../popover/src"],
            "@alfalab/core-components-popover/*": ["../popover/src/*"]
        }
    },
    "references": [
        { "path": "../bottom-sheet" },
        { "path": "../button" },
        { "path": "../mq" },
        { "path": "../popover" }
    ]
}
